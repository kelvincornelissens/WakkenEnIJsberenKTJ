<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editTextWakken"
        android:layout_alignRight="@+id/editTextPinguins"
        android:layout_alignEnd="@+id/editTextPinguins"
        android:layout_above="@+id/textView11" />

    <TextView
        android:text="Wakken:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@+id/editTextWakken"
        android:layout_toStartOf="@+id/editTextWakken"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:text="Pinguins:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_below="@+id/editTextIjsberen"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="16dp" />

    <Button
        android:text="Check resultaat"
        android:id="@+id/buttonAnswer"
        android:background="@drawable/icebutton2"
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/editTextPinguins"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Ijsberen:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView11"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editTextIjsberen"
        android:layout_alignRight="@+id/editTextFout"
        android:layout_alignEnd="@+id/editTextFout"
        android:layout_alignLeft="@+id/editTextFout"
        android:layout_alignStart="@+id/editTextFout"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignBottom="@+id/textView11" />

    <TextView
        android:text="Goed:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/editTextGoed"
        android:layout_alignBottom="@+id/editTextGoed"
        android:layout_toLeftOf="@+id/editTextGoed"
        android:layout_toStartOf="@+id/editTextGoed"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextFout"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextGoed"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/buttonAnswer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Fout:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/editTextGoed"
        android:layout_alignBottom="@+id/editTextGoed"
        android:layout_toLeftOf="@+id/editTextFout"
        android:layout_toStartOf="@+id/editTextFout"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editTextPinguins"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>