<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kelvin.wakkenenijsberenktj.LevelComplete">

    <TextView
        android:text="Level voltooid!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textSize="24sp" />

    <TextView
        android:text="Highscores:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold" />

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/rectangle"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Certificaat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myRectangleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView8"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:id="@+id/textTop1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTop1"
        android:layout_toLeftOf="@+id/textTop1"
        android:layout_toStartOf="@+id/textTop1"
        android:id="@+id/textTop2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_toLeftOf="@+id/textTop2"
        android:layout_toStartOf="@+id/textTop2"
        android:id="@+id/textTop3" />

    <TextView
        android:text="Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:layout_alignLeft="@+id/textName"
        android:layout_alignStart="@+id/textName"
        android:id="@+id/textScore" />

    <TextView
        android:text="PLACEHOLDER heeft level 1 succesvol voltooid!"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textSucces"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/myRectangleView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text="Naam:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textName"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <Button
        android:text="Volgende level"
        android:layout_height="40dp"
        android:id="@+id/nextlvlBtn"
        android:layout_width="200dp"
        android:layout_below="@+id/sharefbBtn"
        android:layout_alignLeft="@+id/mainmenuBtn"
        android:layout_alignStart="@+id/mainmenuBtn" />

    <Button
        android:text="Terug naar hoofdmenu"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/mainmenuBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Deel op Facebook"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/sharefbBtn"
        android:layout_below="@+id/myRectangleView"
        android:layout_alignLeft="@+id/nextlvlBtn"
        android:layout_alignStart="@+id/nextlvlBtn" />
</RelativeLayout>
