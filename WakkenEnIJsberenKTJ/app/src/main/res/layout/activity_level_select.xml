<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wattex"
    android:weightSum="10"
    tools:context="com.kelvin.wakkenenijsberenktj.LevelSelect">

    <Space
        android:layout_weight="4.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Level 1"
        android:layout_width="match_parent"
        android:background="@drawable/custom_button"
        android:id="@+id/buttonLevel1"
        android:layout_height="75dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:text="Level 2"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@drawable/custom_button"
        android:id="@+id/buttonLevel2"
        android:textAlignment="center"
        android:layout_marginBottom="15dp" />

    <Button
        android:text="Level 3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/custom_button"
        android:id="@+id/buttonLevel3" />

</LinearLayout>
